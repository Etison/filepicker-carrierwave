<p id="notice"><%= notice %></p>

<h1>
  <%= @picture.title %>
</h1>
<p>
  <%= filepicker_image_tag(@picture.image_url) if @picture.image? %>
</p>

<%= form_for(@picture) do |f| %>
  <div class="field">
    <%= filepicker_save_button 'Download image', @picture.image_url, 'image/jpg' %>
  </div>
<% end %>


<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
